@model Projeto.Web.Models.ClienteModelEdicao
@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Templates/Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading bg-primary">
                <h3>Atualizar dados do Cliente</h3>
            </div>
            <div class="panel-body">
                Para atualizar os dados do cliente, utilize o formulário abaixo:
                <hr />

                @Html.LabelFor(model => model.IdCliente)
                @Html.TextBoxFor(model => model.IdCliente, new { @readonly = "readonly", @class="form-control" })
                <br />

                @Html.LabelFor(model => model.Nome)
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                <br />

                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                <br />

                @Html.LabelFor(model => model.DataCadastro)
                @Html.TextBoxFor(model => model.DataCadastro, new { @readonly = "readonly", @class="form-control" })
                <br />

                @ViewBag.Mensagem

                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>

            </div>
            <div class="panel-footer">

                <input type="submit" value="Atualizar Cliente" class="btn btn-primary" />
                <a href="/Cliente/Consulta" class="btn btn-default">Cancelar</a>
                
            </div>
        </div>
    </div>

}

