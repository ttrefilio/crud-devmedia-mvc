@model Projeto.Web.Models.ClienteModelExclusao
@{
    ViewBag.Title = "Exclusao";
    Layout = "~/Views/Templates/Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdCliente)

    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-danger">
            <div class="panel-heading bg-danger">

                <h3>Exclusão de Cliente</h3>

            </div>
            <div class="panel-body">

                <strong>Deseja realmente excluir este cliente?</strong>
                <hr />

                <label>Código do Cliente: </label> @Model.IdCliente
                <br />

                <label>Nome: </label> @Model.Nome
                <br />

                <label>E-mail: </label> @Model.Email
                <br />

                <label>Data de Cadastro: </label> @Model.DataCadastro
                <br />

            </div>
            <div class="panel-footer">

                <input type="submit" value="Excluir Cliente" class="btn btn-danger" />
                <a href="/Cliente/Consulta" class="btn btn-default">Cancelar</a>

            </div>
        </div>
    </div>
       
}



